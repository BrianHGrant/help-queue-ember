{{#if question1}}
  <h3>Have you gone through all the steps on the Learn How to Program debugging lesson?</h3>
  <button {{action 'nextQuestion' 1}}>Yes >></button>
{{/if}}
{{#if question2}}
  <h3>Have you asked another pair for help?</h3>
  <button {{action 'nextQuestion' 2}}>Yes >></button>
{{/if}}
{{#if question3}}
  <h3>Have you spent 15 minutes going through through the problem documenting every step?</h3>
  <button {{action 'nextQuestion' 3}}>Yes >></button>
{{/if}}
{{#if question4}}
  <form>
    <div>
      <label for="name">Pair Name</label>
      {{input value=name id="name"}}
    </div>

    <div>
      <label for="location">Location</label>
      {{input value=location id="location"}}
    </div>

    <div>
      <label for="description">Description</label>
      {{textarea value=description id="description"}}
    </div>
    <button {{action 'saveTicket' 4}}>Help!</button>
  </form>
{{/if}}
